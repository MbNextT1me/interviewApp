<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="0" author="MbNextT1me">
        <sql>CREATE SCHEMA IF NOT EXISTS interview_app;</sql>
    </changeSet>

    <changeSet id="1" author="MbNextT1me">
        <createTable tableName="user">
            <column name="ID" type="BIGINT">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="NAME" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="DATE_OF_BIRTH" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="PASSWORD" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="account">
            <column name="ID" type="BIGINT">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="USER_ID" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="BALANCE" type="DECIMAL">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="email_data">
            <column name="ID" type="BIGINT">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="USER_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="EMAIL" type="VARCHAR(200)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <createTable tableName="phone_data">
            <column name="ID" type="BIGINT">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="USER_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="PHONE" type="VARCHAR(13)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="account" baseColumnNames="USER_ID"
                                 constraintName="fk_account_user"
                                 referencedTableName="user" referencedColumnNames="ID"/>

        <addForeignKeyConstraint baseTableName="email_data" baseColumnNames="USER_ID"
                                 constraintName="fk_email_data_user"
                                 referencedTableName="user" referencedColumnNames="ID"/>

        <addForeignKeyConstraint baseTableName="phone_data" baseColumnNames="USER_ID"
                                 constraintName="fk_phone_data_user"
                                 referencedTableName="user" referencedColumnNames="ID"/>
    </changeSet>

</databaseChangeLog>